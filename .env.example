# JSRekordFXBridge v3.0 Configuration
# Copy this file to .env and fill in your values

# ============================================
# DEMO MODE
# ============================================
# Set to 'true' to run with mock hardware controllers
# If no Hue credentials are provided, demo mode is automatically enabled
DEMO_MODE=true

# ============================================
# PHILIPS HUE CONFIGURATION
# ============================================
# Hue Bridge IP address or Bridge ID
HUE_BRIDGE_IP=192.168.1.100
HUE_BRIDGE_ID=your_bridge_id

# Hue user credentials (use either old or new format)
HUE_USERNAME=your_username
HUE_USER_ID=your_user_id

# Hue client key for Entertainment API
HUE_CLIENT_KEY=your_client_key

# Entertainment group configuration
HUE_ENTERTAINMENT_ID=your_entertainment_group_id
HUE_ENTERTAINMENT_GROUP=your_entertainment_group_id

# Hue streaming settings
HUE_USE_STREAMING=true
HUE_MAX_BRIGHTNESS=254
HUE_TRANSITION_TIME=300

# ============================================
# DMX CONFIGURATION
# ============================================
# DMX driver type (enttec-usb-dmx-pro, artnet, etc.)
DMX_DRIVER=enttec-usb-dmx-pro

# DMX device path (for USB interfaces)
DMX_DEVICE=/dev/ttyUSB0

# DMX universe and channel settings
DMX_UNIVERSE=1
DMX_CHANNELS=512

# ============================================
# MIDI CONFIGURATION
# ============================================
# MIDI device names
MIDI_INPUT_DEVICE=DDJ-400
MIDI_OUTPUT_DEVICE=auto
MIDI_CONTROLLER_TYPE=DDJ-400

# MIDI device mappings (JSON format)
MIDI_MAPPINGS={}

# Legacy MIDI settings
MIDI_DEVICE_NAME=DDJ-400
REKORDBOX_VIRTUAL_MIDI_PORT=rekordbox-out

# ============================================
# BEAT DETECTION CONFIGURATION
# ============================================
# Beat detection sensitivity and timing
BEAT_THRESHOLD=0.6
BEAT_WINDOW_SIZE=1024
BEAT_MIN_INTERVAL=150
BEAT_DECAY=0.95

# ============================================
# EFFECTS CONFIGURATION
# ============================================
# Effects directory and behavior
EFFECTS_DIRECTORY=./effects
EFFECTS_PRELOAD=true
EFFECTS_ENABLE_CACHE=true
EFFECTS_RELOAD_ON_CHANGE=false