{
    "name": "jsrekordbridge",
    "version": "3.0.0",
    "description": "DJ lighting control system with Entertainment streaming and comprehensive management tools",
    "author": "Tamay Gündüz (https://github.com/tamaygz)",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "start": "npm run build && node dist/index.js",
        "dev": "tsx src/index.ts",
        "demo": "DEMO_MODE=true tsx src/index.ts",
        "demo-cli": "tsx src/interfaces/cli/demo-cli.ts",
        "hue": "node scripts/hue-manager.js",
        "hue:setup": "node scripts/hue-manager.js setup",
        "hue:validate": "node scripts/hue-manager.js validate",
        "hue:test": "node scripts/hue-manager.js test-streaming",
        "hue:test-effects": "node scripts/hue-manager.js test-effects",
        "hue:debug": "node scripts/hue-manager.js debug",
        "hue:list-groups": "node scripts/hue-manager.js list-groups",
        "hue:fix-groups": "node scripts/hue-manager.js fix-groups",
        "env": "node scripts/env-manager.js",
        "env:generate": "node scripts/env-manager.js generate",
        "env:validate": "node scripts/env-manager.js validate",
        "env:cleanup": "node scripts/env-manager.js cleanup",
        "rekordbox": "node scripts/rekordbox-manager.js",
        "rekordbox:config": "node scripts/rekordbox-manager.js config",
        "rekordbox:validate": "node scripts/rekordbox-manager.js validate",
        "rekordbox:test": "node scripts/rekordbox-manager.js test",
        "rekordbox:test-bpm": "node scripts/rekordbox-manager.js test-bpm",
        "rekordbox:debug": "node scripts/rekordbox-manager.js debug",
        "rekordbox:list-devices": "node scripts/rekordbox-manager.js list-devices",
        "test:hue-streaming": "node scripts/hue-streaming-test.js",
        "test:hue-effects": "node scripts/hue-effects-test.js",
        "clean": "rm -rf dist",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "dmx": "^0.25.1",
        "dotenv": "^16.0.0",
        "inversify": "^6.0.2",
        "jzz": "^1.9.6",
        "node-dtls-client": "^1.1.1",
        "node-hue-api": "^4.0.11",
        "reflect-metadata": "^0.2.2",
        "tslib": "^2.8.1",
        "yaml": "^2.8.1"
    },
    "devDependencies": {
        "@types/node": "^20.19.19",
        "@types/yaml": "^1.9.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "tsx": "^4.0.0",
        "typescript": "^5.2.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
